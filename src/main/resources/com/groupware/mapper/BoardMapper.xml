	<resultMap type="com.groupware.dto.BoardDTO" id="testMap">
		<result property="boardIdx" column="BOARD_idx"/>
		<result property="employeeIdx" column="EMPLOYEE_IDX"/>
		<result property="boardType" column="BOARD_TYPE"/>
		<result property="content" column="CONTENT"/>
		<result property="File" column="FILE"/>
		<result property="insDate" column="INS_DATE"/>
		<result property="updDate" column="UPD_DATE"/>
		<result property="state" column="STATE"/>
		<result property="title" column="title"/>
	</resultMap>
	
  <select id="getBoardList" resultMap="testMap">
  	select * from board
  </select>
  
   <insert id="insert" >
  	insert into board(BOARD_idx,EMPLOYEE_IDX, BOARD_TYPE, CONTENT,FILE,INS_DATE,UPD_DATE,STATE,title)
  	 values(SEQ_BOARD.nextval,#{boardIdx},#{boardType},#{content},#{File},SYSDATE,SYSDATE,#{state},#{title})
  </insert>
  
