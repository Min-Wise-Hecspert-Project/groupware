  	values(#{boardIdx}, #{title}, #{content}, #{writer})
  </insert>
   -->
  
  <select id="read" resultMap="testMap">
  	select * from board where BOARD_idx = #{boardIdx}
  </select>
  
  <delete id="delete">
  	delete from board where BOARD_idx = #{boardIdx}
  </delete>
  
  <update id="update">
	  update
	  	board
	  set
	  	title = #{title},
	  	content = #{content},
	  	UPD_DATE = sysdate
	WHERE BOARD_idx = #{boardIdx}
  	
  </update> 
